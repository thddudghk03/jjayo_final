<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        ></include>

    <TextView
        android:id="@+id/quiz_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 1"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30">

        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-94dp"
            android:text="排"
            android:textColor="#010101"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/text_pronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-19dp"
            android:text="pái"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
    android:id="@+id/button_choice_1"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:textSize="30dp"
    android:text="좌석"
    android:textColor="@color/black"
    android:background="@drawable/green_btn"
    app:layout_constraintVertical_bias="0.52"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_choice_2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="열"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.62"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_choice_3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="당신"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.72"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_choice_4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="~의"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/20"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.92"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♥×5"
        android:textColor="#FFFF0000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />


</android.support.constraint.ConstraintLayout>